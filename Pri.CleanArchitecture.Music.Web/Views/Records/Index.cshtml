@model Pri.CleanArchitecture.Music.Web.ViewModels.RecordsIndexViewModel

<div class="row">
    <div class="col col-lg-6 mx-auto">
        <table class="table table-responsive table-hover">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Genre</th>
                    <th>Artist</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var record in Model.Records)
                { 
                    <tr>
                        <td>@record.Title</td>
                        <td>@record.Genre</td>
                        <td>@record.Artist</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
